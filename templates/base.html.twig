<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Ma Librairie
			{% endblock %}
		</title>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"> {% block stylesheets %}{% endblock %}
		</head>
		<body>
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<a class="navbar-brand" href="/">Ma Librairie</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class="nav-link" href="/">Home</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_admin_livre_index') }}">Gestion des livres</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_admin_auteur_index') }}">Gestion des auteurs</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_admin_genre_index') }}">Gestion des genres</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_admin_user_index') }}">Gestion des utilisateurs</a>
							</li>
						{% endif %}

						<li>
							<a class="nav-link" href="{{ path('app_recherche') }}">Rechercher un livre</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
						</li>
						{% if not app.user %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_login') }}">Login</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</nav>

			<div class="container mt-4"> {% block body %}{% endblock %}
				</div>

				<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
				{% block javascripts %}{% endblock %}
			</body>
		</html>
