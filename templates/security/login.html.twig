{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-body">
						<h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

						<form method="post" action="{{ path('login') }}" class="needs-validation" novalidate>
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							<div class="form-group">
								<label for="inputEmail">Email</label>
								<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
							</div>

							<div class="form-group">
								<label for="inputPassword">Password</label>
								<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
							</div>

							<div class="form-group form-check">
								<input type="checkbox" name="_remember_me" id="remember_me" class="form-check-input">
								<label class="form-check-label" for="remember_me">Rester connect√©</label>
							</div>

							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

							<button class="btn btn-lg btn-primary btn-block" type="submit">Connexion</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
