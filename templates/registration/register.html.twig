{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card">
					<div class="card-body">
						<h1 class="h3 mb-3 font-weight-normal">Inscription</h1>

						{{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}

						{% if form_errors(registrationForm) %}
							<div class="alert alert-danger">
								{{ form_errors(registrationForm) }}
							</div>
						{% endif %}

						<div class="form-group">
							{{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(registrationForm.email) }}
						</div>

						<div class="form-group">
							{{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
							{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(registrationForm.plainPassword) }}
						</div>
						<button type="submit" class="btn btn-lg btn-primary btn-block">Register</button>

						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
