{% extends 'base.html.twig' %}

{% block title %}Page d'accueil de la librairie
{% endblock %}

{% block body %}
	</style>
	<h1>Page d'accueil de la librairie</h1>

	<div class="example-wrapper">
		<div class="livres-grid">
			{% for livre in livres %}
				<div class="livre">
					<p>
						<strong>Titre:</strong>
						{{ livre.titre }}</p>
					<p>
						<strong>Auteur:</strong>
						{{ livre.auteur }}</p>
					<p>
						<strong>Année d'édition:</strong>
						{{ livre.anneeEdition }}</p>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="pagination">
		{{ knp_pagination_render(livres) }}
	</div>
{% endblock %}
