{% extends 'base.html.twig' %}

{% block title %}Livre index
{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
	<h1>Livre index</h1>

	<div class="example-wrapper">
		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th>Annee Edition</th>
					<th>Nombre de pages</th>
					<th>Code ISBN</th>
					<th>Resume</th>
					<th>Disponible</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				<a class="create-new" href="{{ path('app_admin_livre_new') }}">Create new</a>
				{% for livre in livres %}
					<tr>
						<td>{{ livre.id }}</td>
						<td>{{ livre.titre }}</td>
						<td>{{ livre.anneeEdition }}</td>
						<td>{{ livre.nombrePages }}</td>
						<td>{{ livre.codeIsbn }}</td>
						<td>{{ livre.resume }}</td>
						<td>{{ livre.disponible ? 'Oui' : 'Non' }}</td>
						<td>
							<a href="{{ path('app_admin_livre_show', {'id': livre.id}) }}">show</a>
							<a href="{{ path('app_admin_livre_edit', {'id': livre.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="12">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
